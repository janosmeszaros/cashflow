<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cashflow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:name="com.cashflow.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cashflow.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cashflow.statement.activity.AddStatementActivity" />
        <activity android:name="com.cashflow.statement.activity.EditStatementActivity" />
        <activity android:name="com.cashflow.statement.activity.ListStatementActivity" />
        <activity
            android:name="com.cashflow.category.activity.CreateCategoryActivity"
            android:label="@string/title_activity_create_category"
            android:parentActivityName="com.cashflow.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cashflow.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.cashflow.bill.activity.AddBillActivity"
            android:label="@string/title_activity_add_bill" >
        </activity>
        <activity
            android:name="com.cashflow.SwipedAddStatement"
            android:label="@string/title_activity_swiped_add_statement" >
        </activity>
    </application>

</manifest>